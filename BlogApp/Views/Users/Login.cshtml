@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<div class="row justify-content-center  align-items-center ">
    <div class="col-6">
        <div class="card text-center ">
            <div class="card-header"><h1 class="card-title">Login</h1></div>
            <br>
            <div class="card-body">

                <form method="post" action="Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email&emsp;&emsp;:</label>
                        <input type="text" asp-for="Email" class="form-control-sm">
                        @* <span asp-validation-for="Email" class="text-danger"></span> *@
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password :</label>
                        <input type="password" asp-for="Password" class="form-control-sm">
                        @* <span asp-validation-for="Password" class="text-danger"></span> *@

                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>

                </form>
            </div>
        </div>

    </div>
</div>

